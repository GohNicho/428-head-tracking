// This program shows how to control arduino from PC Via Bluetooth// you will first have to link the HC-05 with your computer with the pairing code 1234// download a terminal emulator such as Tera Form// connect the serial COM port in Tera Term with the HC-05// upload the following code on your Arduino// enter 0 & 1 in Tera Term to blink the LED//// Connect ...// arduino>>bluetooth// D11   >>>  Rx// D10   >>>  Tx//Written By Mohannad Rawashdeh//for http://www.genotronex.com/char val; // variable to receive data from the serial portint ledpin = 13; // Arduino LED pin 13 (on-board LED)void setup() {   pinMode(ledpin, OUTPUT); // pin 13 (on-board LED) as OUTPUT   Serial.begin(9600); // start serial communication at 9600bps} void loop() {   if( Serial.available() ) // if data is available to read   {      val = Serial.read(); // read it and store it in 'val'   }   if( val == 'H' ) // if '1' was received   {      digitalWrite(ledpin, HIGH); // turn ON the LED   } else {      digitalWrite(ledpin, LOW); // otherwise turn it OFF   }   delay(100); // wait 100ms for next reading}